<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="AppTheme.Button" parent="Theme.AppCompat.DayNight.NoActionBar">
        <item name="android:windowBackground">@null</item>
        <item name="colorButtonNormal">@color/white</item>
        <item name="android:textColor">@color/first_intro_screen</item>
        <item name="android:background">#33000000</item> <!-- Or any transparency or color you need -->
        <item name="android:windowNoTitle">true</item>
        <item name="android:colorBackgroundCacheHint">@null</item>
        <item name="android:windowIsTranslucent">true</item>
        <item name="android:windowAnimationStyle">@android:style/Animation</item>
    </style>

    <style name="RoundedCornerButton" parent="@style/Widget.AppCompat.Button.Colored">
        <item name="background">@drawable/dotted_line_rounded_corners</item>
        <item name="colorButtonNormal">@color/white</item>
        <item name="colorControlHighlight">@color/white</item>
        <item name="android:textColor">@color/first_intro_screen</item>
    </style>

    <style name="RadioWithTextOnTop">
        <item name="android:button">@null</item>
        <item name="android:drawableBottom">?android:attr/listChoiceIndicatorSingle</item>
        <item name="android:gravity">center_horizontal|bottom</item>
    </style>

    <style name="Widget.AppTheme.VkButton" parent="Widget.MaterialComponents.Button.TextButton.Icon">
        <item name="iconTint">@color/first_intro_screen</item>
        <item name="android:textColor">?attr/colorControlNormal</item>
    </style>

    <style name="Widget.AppTheme.ListItemYellowButtons" parent="Widget.MaterialComponents.Button.TextButton.Icon">
        <item name="android:textColor">@color/list_item_yellow_button</item>
        <item name="android:backgroundTint">@color/list_item_yellow_background_button</item>
    </style>

    <style name="Widget.AppTheme.ListItemSheduleButtons" parent="Widget.MaterialComponents.Button.TextButton.Icon">
        <item name="android:textColor">@color/list_item_shedule_background_button</item>
        <item name="android:backgroundTint">@color/list_item_shedule_back</item>
    </style>

        <style name="Theme.Transparent" parent="android:Theme">
            <item name="android:windowIsTranslucent">true</item>
            <item name="android:windowBackground">@android:color/transparent</item>
            <item name="android:windowContentOverlay">@null</item>
            <item name="android:windowNoTitle">true</item>
            <item name="android:windowIsFloating">true</item>
            <item name="android:backgroundDimEnabled">false</item>
        </style>

</resources>