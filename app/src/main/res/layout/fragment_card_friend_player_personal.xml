<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="250dp"
    tools:context=".fragment.player.CardFriendPlayerPersonalFragment"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_margin="8dp">

    <LinearLayout
        android:layout_width="250dp"
        android:layout_height="98dp"
        android:background="@color/light_grey">

        <androidx.cardview.widget.CardView
            android:id="@+id/fcfpp_photo"
            android:layout_width="56dp"
            android:layout_height="56dp"
            android:layout_marginTop="15dp"
            android:layout_marginStart="10dp"
            android:layout_marginBottom="10dp"
            android:foregroundGravity="center"
            app:cardCornerRadius="160dp"
            app:cardElevation="16dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">

            <ImageView
                android:id="@+id/fcfpp_photo_input"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:scaleType="centerCrop"
                android:src="@drawable/ic_temp_pic" />

        </androidx.cardview.widget.CardView>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/rounded_corner_for_basket"
            android:backgroundTint="@color/light_grey"
            android:orientation="vertical">

            <TextView
                android:id="@+id/fcfpp_friend_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="12dp"
                android:paddingStart="14dp"
                android:text="@string/tools_name"
                android:textAppearance="?attr/textAppearanceHeadline6"
                android:textColor="@color/first_intro_screen"
                tools:ignore="RtlSymmetry" />

            <TextView
                android:id="@+id/fcfpp_online"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/online"
                android:visibility="gone"
                android:paddingStart="14dp"
                android:textAppearance="@style/TextAppearance.AppCompat.Body1"
                android:textColor="@color/light_green"
                tools:ignore="RtlSymmetry" />

            <TextView
                android:id="@+id/fcfpp_date"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/tools_input_date_tournament"
                android:paddingStart="14dp"
                android:textAppearance="@style/TextAppearance.AppCompat.Body1"
                android:textColor="@color/dark_grey"
                tools:ignore="RtlSymmetry" />

            <com.google.android.material.button.MaterialButton
                android:id="@+id/fcfpp_write_button"
                style="?android:attr/borderlessButtonStyle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:backgroundTint="@color/grey"
                android:gravity="top"
                android:text="@string/write_to_friend"
                android:textAppearance="@style/TextAppearance.AppCompat.Body1"
                android:textColor="@color/first_intro_screen"
                tools:ignore="TouchTargetSizeCheck" />
        </LinearLayout>

    </LinearLayout>
</com.google.android.material.card.MaterialCardView>