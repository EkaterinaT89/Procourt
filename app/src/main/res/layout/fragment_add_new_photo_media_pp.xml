<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/dark_blue"
    android:id="@+id/add"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <com.google.android.material.button.MaterialButton
        android:id="@+id/fpmpp_top_thing"
        android:layout_width="50dp"
        android:layout_height="7dp"
        android:layout_gravity="center"
        android:layout_marginBottom="15dp"
        android:background="@drawable/rounded_corner"
        app:backgroundTint="@color/white"
        app:layout_constraintBottom_toTopOf="@id/group_for_add_news_photo_video"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        tools:ignore="SpeakableTextPresentCheck,TouchTargetSizeCheck" />

    <LinearLayout
        android:id="@+id/group_for_add_news_photo_video"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:id="@+id/fpmpp_add_photo_title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:gravity="center"
                android:text="Добавить фото"
                android:textColor="@color/black"
                android:textSize="18sp" />

            <TextView
                android:id="@+id/fpmpp_dotted_line"
                android:layout_width="match_parent"
                android:layout_height="10dp"
                android:layout_marginTop="7dp"
                android:background="@drawable/dotted_line_white_background" />

            <com.google.android.material.button.MaterialButton
                android:id="@+id/fpmpp_add_photo_album"
                style="@style/Widget.AppCompat.Button.Borderless"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_marginStart="16dp"
                android:layout_marginEnd="14dp"
                android:backgroundTint="@color/white"
                android:gravity="start|center"
                android:text="Создать новый фотоальбом"
                android:textAppearance="@style/TextAppearance.AppCompat.Body1"
                android:textColor="@color/dark_blue"
                android:textSize="16sp"
                app:icon="@drawable/ic_plus"
                app:iconTint="@color/dark_blue"
                tools:ignore="TextContrastCheck" />

            <TextView
                android:id="@+id/fpmpp_dotted_line_2"
                android:layout_width="match_parent"
                android:layout_height="10dp"
                android:layout_marginStart="15dp"
                android:layout_marginEnd="15dp"
                android:background="@drawable/dotted_line_white_background" />

            <com.google.android.material.button.MaterialButton
                android:id="@+id/fpmpp_add_photo_my_tournaments"
                style="@style/Widget.AppCompat.Button.Borderless"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_marginStart="16dp"
                android:layout_marginEnd="14dp"
                android:backgroundTint="@color/white"
                android:gravity="start|center"
                android:text="Мои турниры"
                android:textAppearance="@style/TextAppearance.AppCompat.Body1"
                android:textColor="@color/first_intro_screen"
                android:textSize="16sp"
                app:icon="@drawable/ic_plus"
                app:iconTint="@color/first_intro_screen"
                tools:ignore="TextContrastCheck" />

            <TextView
                android:id="@+id/fpmpp_dotted_line_3"
                android:layout_width="match_parent"
                android:layout_height="10dp"
                android:layout_marginStart="15dp"
                android:layout_marginEnd="15dp"
                android:background="@drawable/dotted_line_white_background" />

            <com.google.android.material.button.MaterialButton
                android:id="@+id/fpmpp_add_photo_my_trains"
                style="@style/Widget.AppCompat.Button.Borderless"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_marginStart="16dp"
                android:layout_marginEnd="14dp"
                android:backgroundTint="@color/white"
                android:gravity="start|center"
                android:text="Тренировки"
                android:textAppearance="@style/TextAppearance.AppCompat.Body1"
                android:textColor="@color/first_intro_screen"
                android:textSize="16sp"
                app:icon="@drawable/ic_plus"
                app:iconTint="@color/first_intro_screen"
                tools:ignore="TextContrastCheck" />

            <TextView
                android:id="@+id/fpmpp_dotted_line_4"
                android:layout_width="match_parent"
                android:layout_height="10dp"
                android:layout_marginStart="15dp"
                android:layout_marginEnd="15dp"
                android:background="@drawable/dotted_line_white_background" />

            <com.google.android.material.button.MaterialButton
                android:id="@+id/fpmpp_add_photo_others"
                style="@style/Widget.AppCompat.Button.Borderless"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_marginStart="16dp"
                android:layout_marginEnd="14dp"
                android:backgroundTint="@color/white"
                android:gravity="start|center"
                android:text="Разное"
                android:textAppearance="@style/TextAppearance.AppCompat.Body1"
                android:textColor="@color/first_intro_screen"
                android:textSize="16sp"
                app:icon="@drawable/ic_plus"
                app:iconTint="@color/first_intro_screen"
                tools:ignore="TextContrastCheck" />

            <TextView
                android:id="@+id/fpmpp_dotted_line_5"
                android:layout_width="match_parent"
                android:layout_height="10dp"
                android:layout_marginStart="15dp"
                android:layout_marginEnd="15dp"
                android:background="@drawable/dotted_line_white_background" />

        </LinearLayout>

    </LinearLayout>


</androidx.constraintlayout.widget.ConstraintLayout>