<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="8dp"
    android:layout_marginBottom="10dp"
    app:background="@drawable/dotted_line_top">

    <androidx.constraintlayout.widget.Group
        android:id="@+id/message_is_mine_group"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:visibility="visible"
        app:constraint_referenced_ids="fcomc_mm_avatar, fcomc_mm_content_message, fcomc_mm_message_time" />

    <androidx.cardview.widget.CardView
        android:id="@+id/fcomc_mm_avatar"
        android:layout_width="36dp"
        android:layout_height="36dp"
        android:layout_marginStart="15dp"
        android:layout_marginBottom="5dp"
        android:foregroundGravity="center"
        app:cardCornerRadius="160dp"
        app:layout_constraintBottom_toBottomOf="@id/fcomc_mm_content_message"
        app:layout_constraintStart_toStartOf="parent">

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:scaleType="centerCrop"
            android:src="@drawable/ic_temp_pic" />

    </androidx.cardview.widget.CardView>

    <TextView
        android:id="@+id/fcomc_mm_content_message"
        android:layout_width="270dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="35dp"
        android:layout_marginTop="15dp"
        android:layout_marginEnd="70dp"
        android:layout_marginBottom="15dp"
        android:background="@drawable/rounded_corner_for_basket"
        android:padding="10dp"
        android:textColor="@color/dark_blue"
        app:layout_constraintStart_toEndOf="@id/fcomc_mm_avatar"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:text="Друзья! В разгар St-Petersburg Open предлагаем Вам стать участниками викторины и выиграть ценные
                                призы: билеты на полуфинал и финал турнира!" />

    <TextView
        android:id="@+id/fcomc_mm_message_time"
        android:layout_width="wrap_content"
        android:layout_height="20dp"
        android:layout_marginEnd="10dp"
        android:textColor="@color/first_intro_screen"
        android:textSize="10sp"
        app:layout_constraintBottom_toBottomOf="@id/fcomc_mm_content_message"
        app:layout_constraintEnd_toEndOf="@id/fcomc_mm_content_message"
        tools:ignore="SmallSp"
        tools:text="10:45" />

    <androidx.constraintlayout.widget.Group
        android:id="@+id/message_another_group"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:visibility="gone"
        app:constraint_referenced_ids="fcomc_am_avatar, fcomc_am_content_message, fcomc_am_message_time" />

    <androidx.cardview.widget.CardView
        android:id="@+id/fcomc_am_avatar"
        android:layout_width="36dp"
        android:layout_height="36dp"
        android:layout_marginEnd="15dp"
        android:layout_marginBottom="5dp"
        android:foregroundGravity="center"
        app:cardCornerRadius="160dp"
        app:layout_constraintBottom_toBottomOf="@id/fcomc_am_content_message"
        app:layout_constraintEnd_toEndOf="parent">

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:scaleType="centerCrop"
            android:src="@drawable/ic_temp_pic" />

    </androidx.cardview.widget.CardView>

    <TextView
        android:id="@+id/fcomc_am_content_message"
        android:layout_width="270dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="55dp"
        android:layout_marginTop="15dp"
        android:layout_marginEnd="70dp"
        android:layout_marginBottom="15dp"
        android:background="@drawable/rounded_corner_for_couches_list"
        android:padding="10dp"
        android:textColor="@color/white"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:text="Друзья! В разгар St-Petersburg Open предлагаем Вам стать участниками викторины и выиграть ценные
                                призы: билеты на полуфинал и финал турнира!" />

    <TextView
        android:id="@+id/fcomc_am_message_time"
        android:layout_width="wrap_content"
        android:layout_height="20dp"
        android:layout_marginEnd="10dp"
        android:textColor="@color/white"
        android:textSize="10sp"
        app:layout_constraintBottom_toBottomOf="@id/fcomc_am_content_message"
        app:layout_constraintEnd_toEndOf="@id/fcomc_am_content_message"
        tools:ignore="SmallSp"
        tools:text="10:45" />

</androidx.constraintlayout.widget.ConstraintLayout>


