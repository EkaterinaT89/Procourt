<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    tools:context=".fragment.player.CardFriendForSearchPP"
    xmlns:app="http://schemas.android.com/apk/res-auto" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="110dp"
        android:background="@drawable/dotted_line_top">

        <androidx.cardview.widget.CardView
            android:id="@+id/ffpp_photo"
            android:layout_width="56dp"
            android:layout_height="56dp"
            android:layout_marginTop="15dp"
            android:layout_marginStart="10dp"
            android:layout_marginBottom="10dp"
            android:foregroundGravity="center"
            app:cardCornerRadius="160dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">

            <ImageView
                android:id="@+id/ffpp_photo_input"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:scaleType="centerCrop"
                android:src="@drawable/ic_temp_pic" />

        </androidx.cardview.widget.CardView>

        <LinearLayout
            android:layout_width="270dp"
            android:layout_height="wrap_content"
            android:background="@color/white"
            android:orientation="vertical">

            <TextView
                android:id="@+id/ffpp_friend_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="12dp"
                android:paddingStart="14dp"
                android:text="@string/tools_name"
                android:textAppearance="@style/TextAppearance.AppCompat.Body2"
                android:textColor="@color/dark_blue"
                tools:ignore="RtlSymmetry" />

            <TextView
                android:id="@+id/ffpp_online"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/online"
                android:visibility="gone"
                android:paddingStart="14dp"
                android:textAppearance="@style/TextAppearance.AppCompat.Body1"
                android:textColor="@color/light_green"
                tools:ignore="RtlSymmetry" />

            <TextView
                android:id="@+id/ffpp_date"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/tools_input_date_tournament"
                android:paddingStart="14dp"
                android:textAppearance="@style/TextAppearance.AppCompat.Body1"
                android:textColor="@color/dark_grey"
                tools:ignore="RtlSymmetry" />

            <com.google.android.material.button.MaterialButton
                android:id="@+id/ffpp_write"
                style="?android:attr/borderlessButtonStyle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:backgroundTint="@color/grey"
                android:gravity="top"
                android:text="@string/write_to_friend"
                android:textAppearance="@style/TextAppearance.AppCompat.Body1"
                android:textColor="@color/dark_blue"
                tools:ignore="TouchTargetSizeCheck" />
        </LinearLayout>

        <ImageView
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:src="@drawable/ic_ball"
            android:layout_gravity="center" />

    </LinearLayout>
</com.google.android.material.card.MaterialCardView>