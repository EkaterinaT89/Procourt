<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    tools:context=".fragment.player.CardNewsMediaPlayerPersonalFragment"
    app:cardCornerRadius="10dp"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="8dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="107dp">

        <LinearLayout
            android:layout_width="270dp"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:id="@+id/fcnmpp_news_title"
                android:layout_width="270dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="15dp"
                android:layout_marginTop="15dp"
                android:layout_marginEnd="15dp"
                android:lines="2"
                android:ellipsize="end"
                android:text="@string/tools_text"
                android:textAppearance="@style/TextAppearance.AppCompat.Body1"
                android:textColor="@color/dark_blue"
                tools:ignore="RtlSymmetry" />

            <TextView
                android:id="@+id/fcnmpp_date"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="15dp"
                android:layout_marginTop="16dp"
                android:text="@string/date_news_tools"
                android:textAppearance="@style/TextAppearance.AppCompat.Body1"
                android:textColor="@color/first_intro_screen" />

        </LinearLayout>

        <ImageView
            android:id="@+id/fcnmpp_image_little"
            android:layout_width="106dp"
            android:layout_height="106dp"
            android:src="@drawable/ic_temp_pic" />


    </LinearLayout>
</com.google.android.material.card.MaterialCardView>