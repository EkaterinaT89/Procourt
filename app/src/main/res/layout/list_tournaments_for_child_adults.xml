<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_marginEnd="15dp"
    android:layout_marginStart="15dp"
    android:layout_height="wrap_content"
    android:layout_margin="8dp">

    <TextView
        android:id="@+id/title"
        android:layout_width="match_parent"
        android:layout_height="30dp"
        android:background="@color/yellow"
        android:gravity="center"
        android:text="NATALIA OPEN BY RAZLIV"
        android:textAppearance="@style/TextAppearance.AppCompat.Body2"
        android:textColor="@color/dark_orange"
        tools:ignore="TextContrastCheck" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="150dp"
        android:layout_marginTop="30dp"
        android:background="@color/white">

        <androidx.cardview.widget.CardView
            android:id="@+id/tournament_image"
            android:layout_width="90dp"
            android:layout_height="90dp"
            android:layout_marginStart="10dp"
            android:layout_marginTop="15dp"
            android:layout_marginBottom="10dp"
            android:foregroundGravity="center"
            app:cardCornerRadius="160dp"
            app:cardElevation="16dp" >

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:scaleType="centerCrop"
                android:src="@drawable/ic_temp_pic" />

        </androidx.cardview.widget.CardView>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:id="@+id/rank"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="12dp"
                android:paddingStart="14dp"
                android:text="Разряд:"
                android:textAppearance="@style/TextAppearance.AppCompat.Body1"
                android:textColor="@color/first_intro_screen"
                tools:ignore="RtlSymmetry" />

            <TextView
                android:id="@+id/price"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingStart="14dp"
                android:text="Стоимость участия:"
                android:textAppearance="@style/TextAppearance.AppCompat.Body1"
                android:textColor="@color/first_intro_screen" />

            <TextView
                android:id="@+id/place"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingStart="14dp"
                android:text="Место проведения:"
                android:textAppearance="@style/TextAppearance.AppCompat.Body1"
                android:textColor="@color/first_intro_screen" />

            <TextView
                android:id="@+id/date"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingStart="14dp"
                android:text="Дата проведения:"
                android:textAppearance="@style/TextAppearance.AppCompat.Body1"
                android:textColor="@color/first_intro_screen" />

            <TextView
                android:id="@+id/level"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingStart="14dp"
                android:text="Уровень:"
                android:textAppearance="@style/TextAppearance.AppCompat.Body1"
                android:textColor="@color/first_intro_screen" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:id="@+id/input_rank"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="12dp"
                android:text="Парный женский"
                android:textAppearance="@style/TextAppearance.AppCompat.Body1"
                android:textColor="@color/first_intro_screen"
                tools:ignore="RtlSymmetry" />

            <TextView
                android:id="@+id/input_price"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingStart="48dp"
                android:text="4 000 руб."
                android:textAppearance="@style/TextAppearance.AppCompat.Body1"
                android:textColor="@color/first_intro_screen" />

            <TextView
                android:id="@+id/input_place"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingStart="48dp"
                android:text="СК Разлив"
                android:textAppearance="@style/TextAppearance.AppCompat.Body1"
                android:textColor="@color/first_intro_screen" />

            <TextView
                android:id="@+id/input_date"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingStart="48dp"
                android:text="01.01.2022"
                android:textAppearance="@style/TextAppearance.AppCompat.Body1"
                android:textColor="@color/first_intro_screen" />

            <TextView
                android:id="@+id/input_level"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingStart="48dp"
                android:text="Средний"
                android:textAppearance="@style/TextAppearance.AppCompat.Body1"
                android:textColor="@color/first_intro_screen" />

        </LinearLayout>

    </LinearLayout>

    <TextView
        android:id="@+id/tournament_is_going"
        android:layout_width="match_parent"
        android:layout_height="37dp"
        android:background="@drawable/dotted_line_top"
        android:layout_gravity="bottom"
        android:gravity="center"
        android:text="ТУРНИР ЗАПУЩЕН"
        android:visibility="gone"
        android:textAppearance="@style/TextAppearance.AppCompat.Body2"
        android:textColor="@color/light_green"
        tools:ignore="TextContrastCheck" />

    <TextView
        android:id="@+id/not_enough_participants"
        android:layout_width="match_parent"
        android:layout_height="37dp"
        android:background="@drawable/dotted_line_top"
        android:layout_gravity="bottom"
        android:gravity="center"
        android:text="ДЛЯ СТАРТА НЕ ХВАТАЕТ 2 УЧАСТНИКОВ"
        android:textAppearance="@style/TextAppearance.AppCompat.Body2"
        android:textColor="@color/dark_blue"
        tools:ignore="TextContrastCheck" />

</com.google.android.material.card.MaterialCardView>