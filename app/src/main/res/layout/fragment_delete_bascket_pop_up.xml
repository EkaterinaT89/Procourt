<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/fdbpu_delete_fragment"
    tools:context=".fragment.basket.DeleteBascketPopUpFragment"
    android:background="@color/dark_blue">

    <TextView
        android:id="@+id/top_thing"
        android:layout_width="50dp"
        android:layout_height="7dp"
        android:layout_marginBottom="8dp"
        android:background="@drawable/rounded_corner"
        app:layout_constraintBottom_toTopOf="@id/background"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <androidx.cardview.widget.CardView
        android:id="@+id/background"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="500dp"
        app:cardCornerRadius="10dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <TextView
            android:id="@+id/fdbpu_delete_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="top|center"
            android:layout_marginTop="15dp"
            android:layout_marginBottom="10dp"
            android:text="@string/delete_title"
            android:textColor="@color/first_intro_screen"
            android:textSize="18sp" />

        <TextView
            android:id="@+id/dotted"
            android:layout_width="match_parent"
            android:layout_height="5dp"
            android:layout_marginTop="45dp"
            android:background="@drawable/dotted_line_bottom" />

        <TextView
            android:id="@+id/fdbpu_delete_info"
            android:layout_width="match_parent"
            android:layout_height="78dp"
            android:layout_gravity="top|center"
            android:layout_marginTop="65dp"
            android:gravity="center"
            android:text="@string/delete_info"
            android:textAppearance="@style/TextAppearance.MaterialComponents.Headline3"
            android:textColor="@color/dark_blue"
            android:textSize="16sp" />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/fdbpu_delete_button"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginStart="16dp"
            android:layout_marginTop="170dp"
            android:layout_marginEnd="14dp"
            android:layout_marginBottom="15dp"
            android:backgroundTint="@color/first_intro_screen"
            android:text="@string/delete_button"
            android:textColor="@color/white"
            app:cornerRadius="6sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="@id/background" />

    </androidx.cardview.widget.CardView>
</androidx.constraintlayout.widget.ConstraintLayout>